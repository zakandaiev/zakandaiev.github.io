#dark-theme
	body
		color $dark-theme-color
		background #1C1C1C
	// Buttons
	.submit-btn
		&:hover
			box-shadow: 0 0 18px rgba(255, 255, 255, 0.1)
	// Vertical navigation
	.vertical-nav a::before
		background $dark-theme-color
	.vertical-nav a:hover::before
		background $accent
	.vertical-nav a.active::before,
	.vertical-nav a:hover::before,
	.vertical-nav:hover.vertical-nav a:hover::before,
	.vertical-nav:hover.vertical-nav a.active::before
		background $accent
	// Nav trigga
	.nav-trigger
		background rgba(234, 242, 227, 0.9)
		span, span::before, span::after
			background-color #1C1C1C
	.vertical-nav.open + .nav-trigger
		background-color transparent
	// Top panel
	.top-panel
		.toggle-colormode
			.sun-icon
				background-color #3A3A3A
			.moon-icon
				background-color #EBC815
		.soc-icons a
			svg
				fill: $dark-theme-color
				.codepen
					fill: $dark-theme-color
				&:hover
					#facebook
						fill #3b5998
					.youtube
						fill #FF0000
					#github
						fill #2ebc4f
					.codepen
						fill #FFDD40
					#envelope
						fill #e0474c
	// Sections
	.section
		background #1C1C1C
		&:nth-of-type(even)
			background #2B2B2B
		h3
			color: darken(#fff, 2%)
		p
			text-color(light)
	// Individual section styles
	#home
		background: linear-gradient(to bottom, rgba(255,255,255,0.15) 0%, rgba(0,0,0,0.15) 100%), radial-gradient(at top center, rgba(255,255,255,0.40) 0%, rgba(0,0,0,0.40) 120%) #2c2c2c; 
		background-blend-mode: multiply,multiply;
	#about
		.exp-timeline::after
			background linear-gradient(180deg, transparent, $accent 10%, $accent 90%, transparent)
		.timeline-left::after
			background-color $dark-theme-color
	#skills
		background-image url("../img/skills/background-dark.jpg")
		background-attachment fixed
		background-size cover
		background-position center
	#portfolio
		background #2B2B2B
		.portfolio-header
			background: linear-gradient(to bottom, rgba(255,255,255,0.15) 0%, rgba(0,0,0,0.15) 100%), radial-gradient(at bottom center, rgba(255,255,255,0.40) 0%, rgba(0,0,0,0.40) 120%) #2c2c2c; 
			background-blend-mode: multiply,multiply;
		.open-portfolio-btn:hover
			box-shadow: 0 0 50px rgba(255, 255, 255, 0.1);
	#contact
		background: linear-gradient(to bottom, rgba(255,255,255,0.15) 0%, rgba(0,0,0,0.15) 100%), radial-gradient(at top center, rgba(255,255,255,0.40) 0%, rgba(0,0,0,0.40) 120%) #2c2c2c; 
		background-blend-mode: multiply,multiply;
		.contact-form
			.legend
				color #999
			.form-control
				background #111
				border 1px solid #000
				border-right 1px solid #353535
				border-bottom 1px solid #353535
			.alert-thx
				background $accent
				box-shadow 0px 0px 200px $dark-theme-color