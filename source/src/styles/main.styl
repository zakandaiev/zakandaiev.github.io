/*==========  Third party  ==========*/
@import "../../node_modules/normalize.css/normalize.css"
@import "../../node_modules/reset-css/reset.css"

/*==========  Variables, Mixins, Fonts ==========*/
@import "vars"

/*==========  Global ==========*/
*, ::before, ::after
	box-sizing border-box
	margin 0
	padding 0

html, body
	height 100%

body
	font-family $default-font
	font-size 1.1rem
	line-height 1.75
	min-width 320px
	position relative
	overflow-x hidden
	color #000
	background-color #eeeeee
	text-align center

a
	color #4B8FC2
	text-decoration none

.accent-color
	color $accent

.noscroll
	overflow hidden
	position static

// Buttons
@import "partials/buttons"

/*==========  Custom  ==========*/
// Loader
.loader,
.loader::before,
.loader:after {
	border-radius: 50%;
	width: 2.5em;
	height: 2.5em;
	animation-fill-mode: both;
	animation: loadd 1.8s infinite ease-in-out;
}
.loader {
	color: $accent;
	font-size: 10px;
	position: absolute;
	left: 50%;
	top: 50%;
	text-indent: -9999em;
	transform: translateY(-50%) translateZ(0);
	animation-delay: -0.16s;
}
.loader::before,
.loader:after {
	content: '';
	position: absolute;
	top: 0;
}
.loader::before {
	left: -3.5em;
	animation-delay: -0.32s;
}
.loader::after {
	left: 3.5em;
}
@keyframes loadd {
	0%,
	80%,
	100% {
	  box-shadow: 0 2.5em 0 -1.3em;
	}
	40% {
	  box-shadow: 0 2.5em 0 0;
	}
}
.loader-content
	display none

// Vertical navigation
@import "partials/vertical-nav"

// Section styles
.section
	display table
	width 100%
	height 100vh
	background #eeeeee
	&:nth-of-type(even)
		background #f5f5f5
	.content-wrapper
		position relative
		display table-cell
		vertical-align middle
		text-align center
		padding-top 2rem
		padding-bottom 2rem
	.content
		width 90%
		margin 0 auto
	h1, h2
		text-transform uppercase
		font-family $orbitron-font
		font-size 2.8rem
		text-shadow 0px 4px 3px rgba(0,0,0,0.4),
					0px 8px 13px rgba(0,0,0,0.1),
					0px 18px 23px rgba(0,0,0,0.1);
	h3
		text-transform uppercase
		font-family $orbitron-font
		font-size 1.5rem
	p
		margin 1em auto 0
		max-width 680px
		text-color(dark)

// Individual section styles
@import "partials/sec-home"
@import "partials/sec-about"
@import "partials/sec-skills"
@import "partials/sec-portfolio"
@import "partials/sec-contact"

#alert-toolbar
	position sticky
	bottom 0
	z-index 10

#alert-toolbar, #copyright
	display block
	width 100%
	padding 1em
	background #2c2c2c
	color $dark-theme-color
	font-weight 300
	text-align center

.scroll-down
	position absolute
	left 50%
	right auto
	transform translateX(-50%)
	bottom 20px
	width 44px
	height 44px
	background url(../img/arrows.svg) no-repeat center center
	transition-duration 0.3s
	transition-property transform
	transition-timing-function ease-out
	&:hover
		transform translateX(-50%) translateY(10px)

.scroll-top
	@extend .scroll-down
	transform translateX(-50%) rotate(180deg)
	&:hover
		transform translateX(-50%) rotate(180deg) translateY(10px)

/*==========  Dark Theme  ==========*/
@import "main-dark"

/*==========  Animations  ==========*/
@import "partials/animations"

/*==========  Import Media Queries (Always at the end)  ==========*/
@import "media"