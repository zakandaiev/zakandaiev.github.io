// Face Flip Picture
.face-pic
	margin 1rem auto
	width 200px
	height 200px
	border-radius 100%
	background-color transparent
	perspective 200px
	transition transform 1s
	transform-style preserve-3d
	cursor pointer
	&:active
		transform rotateY(180deg)

.face-pic-front, .face-pic-back
	border-radius 100%
	display block
	position absolute
	width 100%
	height 100%
	backface-visibility hidden

.face-pic-front
	box-shadow 0 0 10px 5px rgba(0,0,0,.1)

.face-pic-back
	transform rotateY(180deg)

// Expirience timeline
.exp-timeline
	position relative
	margin 2rem auto
	padding 1em 0
	&::after
		content: '';
		position: absolute;
		width: .5rem;
		background linear-gradient(180deg, transparent, $accent 10%, $accent 90%, transparent)
		top: 0;
		bottom: 0;
		left: 50%;
		z-index: 0;
	.timeline-entry
		width 100%
		display flex
		flex-flow row nowrap
		justify-content center
		align-items center
		align-content center
		margin-bottom 2em
		h4, p
			margin:0
			padding:0
			width:100%
		h4
			font-weight 700
		p
			font-weight 300
		.timeline-left
			text-align right
			padding-right 2rem
			position relative
			width 100%
			&::after
				content ''
				position absolute
				width 30px
				height 30px
				right -1.2rem
				background-color white
				border 4px solid $accent
				border-radius 50%
				top 50%
				transform translateY(-50%)
				z-index 1
				transition .5s
		.timeline-right
			text-align left
			padding-left 2rem
			position relative
			width 100%
		&:hover .timeline-left::after
			border 4px solid lighten($accent, 20%)