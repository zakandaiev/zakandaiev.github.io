#portfolio
	background #ee9ca7
	background linear-gradient(to top, #ffdde1, #ee9ca7)

.portfolio-header
	position absolute
	top 0
	left 0
	width 100%
	height 100vh
	background #f5f5f5
	z-index 2
	transition all .5s ease
	display:flex;justify-content:center;align-items:center;flex-flow:column nowrap;
	&::after
		content '\25bc'
		font-size 2rem
		position absolute
		left auto
		top 0
		bottom auto
		right auto
		opacity 0
		transition opacity 0.2s
	&.opened
		height 3rem
		box-shadow 0 10px 20px rgba(0, 0, 0, 0.7)
		cursor pointer
		&::after
			opacity 1
		&:hover::after
			opacity .7

.portfolio
	position relative
	width 80%
	margin 0 auto
	z-index 0
	display none
	&.opened
		animation-duration 1s
		animation-fill-mode both
		animation-name bounceInRight
		display contents